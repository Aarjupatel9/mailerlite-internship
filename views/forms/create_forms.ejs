<body>
    <div class="wrapper">
        <nav class="navbar navbar-light">
            <h3 style="color: white;">Drag & Drop Form Builder</h3>
            <div class="action_btns text-center">
                <button class="btn bg-danger" id="getData">Get HTML code</button>
                <button class="btn bg-danger" id="clear">Clear</button>
                <button class="btn bg-info" id="preview">Preview</button>
                <button class="btn bg-success" id="save">Save</button>
            </div>
        </nav>
        <div class="builder-wrapper">
