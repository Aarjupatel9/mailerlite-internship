<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.7.1.min.js"></script>
    <script src="/js-files/common.js"></script>
    <script src="/js-files/draft.js"></script>
    <link href="/css-files/box.css" rel="stylesheet" type="text/css">
    <link href="/css-files/widgit.css" rel="stylesheet" type="text/css">


    <link href="/css-files/campaigns.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Groups</title>
</head>

<body>
    <div class="conatainer">
        <div class="side_bar bg-light">
            <%- include('../common/sidebar')%>
        </div>
        <div class="main_area">
            <div class="main_header">
                <%- include('../common/user_details')%>
                    <div class="row m-3">
                        <div class="col h1 ">
                            Subscribers
                        </div>
                        <div class="col">
                            <form id="main_form" method="post" action="/subscribers/addgroup">
                                <button type="submit" class="btn btn-success float-right mr-lg-5">Create New
                                    Group</button>
                            </form>
                        </div>
                    </div>
                    <!-- <div class="title_name ml-4 h2">Campaigns</div> -->
                    <div class="state ml-4 mt-3 ">
                        <%- include('../common/subs-navbar')%>
                    </div>
            </div>

            <div class="work_area">
                <div class="work_container text-center m-4 p-4">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="h2  card-title">Groups</h4>
                            <p class="card-description"></p>
                             <%if(data.result){%> 
                                <div class="table-responsive">
                                    <table class="table" id="draft-table">
                                        <thead>
                                            <tr>
                                                <th class="no-border">
                                                    Group Name</th>
                                                <th>Subscribers</th>
                                                
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                             <% for (var i=0; i < group_d.length; i++) { %> 
                                                <tr class="no-border">
                                                    
                                                    <td class="no-border">
                                                        <form action="group_sub_detail" method="post">
                                                            <div class="form-group col " >
                                                                <!-- <label for="campaign_key">Campaign KEY</label> -->
                                                                 <input type="text" style="display:none" name="email"
                                                                    class="form-control" id="email"
                                                                     value="<%=group_d[i].group_key%>" 
                                                                    readonly> 
                                                            
                                                             <input type="submit" class="btn" value="<%=group_d[i].group_name%>"> 
                                                        </div>
                                                        </form>
                                                    </td>
                                                    
                                                    <td>
                                                        <%=group_d[i].groupcounter%>    
                                                    </td>
                                                    <!-- <td class="no-border">
                                                        <input class="btn"
                                                            onclick="removeDraft(`<%=data.result[i].campaign_key%>`)"
                                                            type="button" value="remove">
                                                    </td> -->
                                                </tr>
                                                 <%}%> 
                                        </tbody>

                                    </table>
                                </div>
                                <%}%>
                            
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>


</body>

</html>