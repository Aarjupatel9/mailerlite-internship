    <title>Add Groups</title>
    <script>
        function addgp() {
           var group_name = document.getElementById("group_name").value;
           
            var gdetails = {
                group_name: `${group_name}`,
             
            
            };
            console.log(gdetails);
            let options = {
                method: "POST",
                headers: {
                    "Content-Type": "application/json;charset=utf-8",
                },
                body: JSON.stringify(gdetails),
            };
             //Fake api for making post requests
             let fetchRes = fetch("/subscribers/addgroupapi", options);
             fetchRes
                 .then((res) => res.json())
                 .then((d) => {
                     console.log(d);
                     if (d.response_status == "1") {
                         window.alert(
                             "Added new Group"
                         );
                         document.location.reload();
                     } else {
                         window.alert(
                             "Can not added new Group Now , due to server error"
                         );
                     }
                 });
        }
        
    </script>
</head>

