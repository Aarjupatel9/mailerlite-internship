<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./layout'); %>
        <title>form page</title>
        <style>
            .form_link {
                background-color: rgb(211, 211, 211);
            }
        </style>
</head>

<body>
    <div class="wrapper d-flex flex-raw">
        <div class="side_bar overflow-auto flex-column bg-dark">
            <%- include('./common/siidebar')%>
        </div>
        <div class="main_area">
            <div class="main_header">
                <div class="row ml-3 mt-3">
                    <div class="col h5 ">
                        <%=user_details.c_name%>
                    </div>
                    <div class="col  ">
                        <div class="row float-right ">
                            <div class="col popup mr-2" onclick="myFunction()">
                                <div class="row">
                                    <span><i class="arrow-down "></i></span>
                                </div>
                                <div class="row popuptext text-center" id="myPopup">
                                    <form>
                                        <input class="btn bg-transparent text-light ml-1" formmethod="get"
                                            formaction="/logout" type="submit" value="logout" onclick="runHello()">
                                        <input class="btn btn-success mr-1" formaction="/profile" formmethod="get"
                                            type="submit" value="Profile" onclick="runHello()">
                                    </form>
                                </div>
                            </div>
                            <div class="col mr-lg-5 ">
                                <div class="row  ">
                                    <%=user_details.name%>
                                </div>
                                <div class="row float-right ">
                                    <%=user_details.email%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main_content">
                <div class="row m-3">
                    <div class="col h1 ">New Forms</div>
                    <div class="container-fluid mt-5">
                        <form action="/form/name" method="post">
                            <div class="form-group">
                                <label for="form_name">Form name</label>
                                <input type="text" class="form-control" name="form_name" id="form_name"
                                    placeholder="Enter form name" required>
                            </div>
                            <button type="submit" class="btn btn-success float-right">Save and Continue</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>