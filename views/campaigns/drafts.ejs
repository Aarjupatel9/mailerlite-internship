<body>
    <div class="conatainer">
        <div class="side_bar bg-light">
            <%- include('../common/sidebar')%>
        </div>
        <div class="main_area">
            <div class="main_header">
                <div class="camp_heading w-100">
                    <div class="profile_plan h3 ">
                        <%=data.c_name%>
                    </div>
                    <div class="profile_info">
                        <div class="profile_container">
                            <div class="profile_info_name h5 ">
                                <%=data.name%>
                            </div>
                            <div class="profile_info_email h5 ">
                                <%=data.email%>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="camp_heading2 ml-4 w-100">
                    <div class="profile_plan h2 ">
                        Campaigns
                    </div>
                    <div class="profile_info">
                        <form id="main_form" method="post" action="/campaigns/create">
                            <button type="submit" class="btn btn-primary btn-lg">Create New Campaign</button>
                        </form>
                    </div>
                </div>
                <!-- <div class="title_name h2">Campaigns</div> -->
                <div class="state ">
                    <%- include('../common/camp-navbar')%>

                </div>
            </div>

            <div class="work_area">
                <div class="work_container text-center m-4 p-4">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="h2  card-title">Drafts</h4>
                            <p class="card-description"></p>
                            <%if(data.draftdetails){%>
                                <div class="table-responsive">
                                    <table class="table" id="draft-table">
                                        <thead>
                                            <tr>
                                                <th class="no-border">To Schedule Camp.</th>
                                                <th>campaign name</th>
                                                <th>subject of email</th>
                                                <th>Email Body</th>
                                                <th>Whom to send</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (var i=0; i < data.draftdetails.length; i++) { %>
                                                <tr class="no-border">
                                                    <form action="/Schedule-Draft" metho="post">
                                                        <td class="no-border">
                                                            <input
                                                                onclick="scheduleDraft(`<%=data.draftdetails[i].campaign_key%>`,`<%=data.draftdetails[i].campaign_name%>`, `<%=data.draftdetails[i].subjectofemail%>`,`<%=data.draftdetails[i].email_body%>`,`<%=data.draftdetails[i].campaign_type%>`, `<%=data.draftdetails[i].whomtosend%>`)"
                                                                type="button" value="Schedule">
                                                        </td>
                                                        <td>
                                                            <%=data.draftdetails[i].campaign_name%>
                                                        </td>
                                                        <td>
                                                            <%=data.draftdetails[i].subjectofemail%>
                                                        </td>
                                                        <td>
                                                            <%=data.draftdetails[i].email_body%>
                                                        </td>

                                                        <td>
                                                            <%=data.draftdetails[i].whomtosend%>
                                                        </td>
                                                        <td class="no-border">
                                                            <input
                                                                onclick="removeDraft(`<%=data.draftdetails[i].campaign_key%>`,`<%=data.draftdetails[i].campaign_name%>`, `<%=data.draftdetails[i].subjectofemail%>`,`<%=data.draftdetails[i].email_body%>`,`<%=data.draftdetails[i].campaign_type%>`, `<%=data.draftdetails[i].whomtosend%>`)"
                                                                type="button" value="remove">
                                                        </td>
                                                    </form>
                                                </tr>
                                                <%}%>
                                        </tbody>
                                    </table>
                                </div>
                                <%}%>
                        </div>
                    </div>
                    <%if(!data.draftdetails){%>
                        <div class="card">
                            <div class="card-body">
                                <form id="main_form" method="post" action="/campaigns/create">
                                    <div class="mb-3" name="email">
                                        <label class="h3" for="exampleInputEmail1" class="form-label">Your drafts is
                                            Empty</label>
                                        <div id="emailHelp" class="form-text h4">Once you schedule your campaign, it
                                            will appear here.
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <%}%>
