<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Signup</title>
  <link href="/css-files/campaigns.css" rel="stylesheet" type="text/css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />

</head>

<body style="background-color:black;">
  <div class="container text-light h5 text-center" style="margin-top: 10vh; width: 40vw;">
    <label class="text-center h2">Signup Form</label>
    <form class="text-left" action="/signup" method="post">
      <div class="form-group">
        <label for="fname">First Name</label>
        <input type="text" class="form-control" id="fname" name="fname" placeholder="Enter First Name" required />
      </div>
      <div class="form-group">
        <label for="lname">Last Name</label>
        <input type="text" class="form-control" id="lname" name="lname" placeholder="Enter Last Name" required />
      </div>

      <div class="form-group">
        <label for="mono">Mobile Number</label>
        <input type="text" class="form-control" id="mono" name="mono" placeholder="Enter Mobile Number" required />
      </div>

      <div class="form-group">
        <label for="email">Email address</label>
        <input type="emails" class="form-control" id="emails" name="emails" aria-describedby="emailHelp"
          placeholder="Enter email" required />
        <small id="emailHelp" class="form-text text-muted">We'll never share
          your email with anyone else.</small>
      </div>

      <div class="form-group">
        <label for="companyname">Comapany name</label>
        <input type="text" class="form-control" id="companyname" name="companyname" placeholder="Company Name"
          required />
      </div>
      <div class="form-group">
        <label for="Passwords">Password</label>
        <input type="password" class="form-control" id="passwords" name="passwords" placeholder="Password" required />
      </div>
      <div class="form-group">
        <label for="RePasswords">Confirm Password</label>
        <input type="password" class="form-control" id="repasswords" name="repasswords" placeholder="Password"
          required />
      </div>
      <br />
      <button type="submit" class="btn btn-primary">Signup</button>

    </form>

    <% if(data.message==1){ %>
      <h4 class="alert alert-danger m4-4">User is register successfully</h4>
      <% }else if(data.message==0){ %>
        <h4 class="alert alert-danger m4-4">your password is not same</h4>
        <% }else if(data.message==2){ %>
          <h4 class="alert alert-danger m4-4">This emal id is already exists with onother account</h4>
          <% } %>
  </div>

</body>

</html>